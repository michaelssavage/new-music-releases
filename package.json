{
	"name": "new-music-releases",
	"author": "Michael Savage",
	"version": "1.0.0",
	"description": "new music releases from Spotify",
	"private": true,
	"type": "module",
	"workspaces": [
		"client",
		"server"
	],
	"scripts": {
		"dev": "concurrently \"npm run dev --workspace=server\" \"npm run dev --workspace=client\" ",
		"dev:client": "npm run dev --workspace=client",
		"dev:server": "npm run dev --workspace=server",
		"build": "npm run build:client && npm run build:server",
		"build:client": "npm run build --workspace=client",
		"build:server": "npm run build --workspace=server",
		"start": "npm run start --workspace=server",
		"start:client": "npm run start --workspace=client",
		"start:server": "npm run start --workspace=server",
		"lint": "biome lint --error-on-warnings ./",
		"format": "biome format ./",
		"get-followed-artists": "tsx ./scripts/fetchFollowedArtists.ts",
		"get-new-releases": "tsx ./scripts/getNewReleases.ts",
		"get-playlist": "tsx ./scripts/getPlaylist.ts",
		"add-tracks": "tsx ./scripts/addTracksToPlaylist.ts",
		"get-album-tracks": "tsx ./scripts/getAlbumTracks.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"concurrently": "^9.1.2"
	},
	"dependencies": {
		"date-fns": "^4.1.0"
	}
}
